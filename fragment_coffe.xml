<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoffeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFEFE">

        <ImageView
            android:id="@+id/Coffe_image"
            style="@style/Theme.Coffe_app"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:background="@drawable/coffe_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:gravity="clip_horizontal|center_horizontal"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Coffe_image" />

        <TextView
            android:id="@+id/Coffe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Name"
            android:textColor="#0B0B0B"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/Coffe_image"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_revision"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:foreground="@android:drawable/ic_menu_edit"
            app:icon="@android:drawable/ic_menu_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>